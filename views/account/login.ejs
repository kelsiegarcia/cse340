<h1><%=title%></h1>
<%- messages() %>

<div class="login-page"
	<form id="loginForm" action="/account/login" method="post" class="login-form">
		<fieldset>
			<legend>Account Login</legend>
			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" id="email" name="account_email" required>
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).{8,}$"
					title="Password must be at least 8 characters long and contain at least one digit, one lowercase letter, one uppercase letter. No spaces allowed.">
			</div>
			<button type="submit" role="button" class="account-button">Login</button>
		</fieldset>
	</form>
</div>
<p class="signup-link">Don't have an account? <a href="/account/register">Register</a></p>